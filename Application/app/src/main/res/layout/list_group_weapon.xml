<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    android:theme="@style/AppTheme.NoActionBar">

    <ImageView
        android:id="@+id/list_item_color"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_margin="3dp"
        app:srcCompat="@color/darkBlue"
        android:contentDescription="@string/opsIcon" />

    <TextView
        android:id="@+id/lbl_weapon_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/imageTypeArme"
        android:text="@string/fusil_d_assauts"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageTypeArme"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/list_item_color"
        android:layout_alignTop="@+id/list_item_color"
        app:srcCompat="@drawable/type_arme_1" />
</RelativeLayout>