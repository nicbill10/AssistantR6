<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar">

    <ImageView
        android:id="@+id/list_item_color"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        app:srcCompat="@android:color/darker_gray"
        android:contentDescription="@string/opsIcon" />

    <ImageView
        android:id="@+id/icon_weapon_list"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/list_item_color"
        android:layout_alignStart="@+id/list_item_color"
        android:layout_alignTop="@+id/list_item_color"
        android:contentDescription="@string/opsIcon"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/arme_1_min" />

    <TextView
        android:id="@+id/lbl_weapon_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/icon_weapon_list"
        android:fontFamily="@font/bebas"
        android:text="@string/ash"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

</RelativeLayout>