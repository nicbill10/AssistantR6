<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:theme="@style/AppTheme.NoActionBar">

    <ImageView
        android:id="@+id/list_item_color"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_margin="3dp"
        app:srcCompat="@color/colorPrimary"
        android:contentDescription="@string/opsIcon" />

    <TextView
        android:id="@+id/lbl_type_ops"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageOpsHeader"
        android:layout_toStartOf="@+id/drapeauCTU"
        android:text="SAS"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageOpsHeader"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/list_item_color"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icone_ctu_5" />

    <ImageView
        android:id="@+id/drapeauCTU"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_alignEnd="@+id/list_item_color"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/drapeau_5" />
</RelativeLayout>